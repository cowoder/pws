generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PasswordToShare {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  destroyAt        DateTime
  deleteAfterOpens Int      @default(1)
  openWithPassword String?

  sharedPassword String
}
